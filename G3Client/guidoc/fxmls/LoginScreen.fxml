<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="768.0" maxWidth="1024.0" prefHeight="768.0" prefWidth="1024.0" styleClass="myPane" stylesheets="@../css/G3_BiteMe_Main_Style_Sheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers_gui.LoginScreenController">
   <children>
      <Button fx:id="btnBack" layoutX="20.0" layoutY="704.0" mnemonicParsing="false" onAction="#getBackBtn" prefHeight="50.0" prefWidth="100.0" styleClass="back" textFill="#383838">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Button>
      <HBox layoutX="5.0" layoutY="2.0" prefHeight="43.0" prefWidth="106.0" spacing="5.0">
         <children>
            <Button id="btnExit" fx:id="btnExit" mnemonicParsing="false" onAction="#getExitBtn" prefHeight="40.0" prefWidth="50.0" styleClass="exit" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnHelp" mnemonicParsing="false" onAction="#getHelpBtn" prefHeight="40.0" prefWidth="50.0" styleClass="help" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label layoutX="331.0" layoutY="50.0" prefHeight="76.0" prefWidth="312.0" styleClass="headLight" text="User Login" textFill="#383838">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="841.0" layoutY="13.0" styleClass="miniLabel" text="Home Screen -&gt; Login" />
      <Button fx:id="btnLogin" layoutX="362.0" layoutY="408.0" mnemonicParsing="false" onAction="#getLoginBtn" prefHeight="50.0" prefWidth="250.0" styleClass="connect" text="Login" textFill="#383838">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Button>
      <VBox layoutX="259.0" layoutY="179.0" prefHeight="229.0" prefWidth="456.0">
         <children>
            <HBox prefHeight="130.0" prefWidth="450.0">
               <children>
                  <VBox prefHeight="100.0" prefWidth="173.0" spacing="20.0" styleClass="vbox">
                     <children>
                        <Label prefHeight="40.0" prefWidth="200.0" text="User Name:" />
                        <Label prefHeight="40.0" prefWidth="200.0" text="Password:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
                  <VBox id="vbox" prefHeight="285.0" prefWidth="279.0" spacing="15.0">
                     <children>
                        <TextField fx:id="userNameField" maxHeight="35.0" maxWidth="250.0" prefHeight="35.0" prefWidth="250.0" promptText="Enter your user name here" styleClass="text-field" />
                        <TextField fx:id="passwordField" maxHeight="35.0" maxWidth="250.0" prefHeight="35.0" prefWidth="250.0" promptText="Enter your password here" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="errorLabel" prefHeight="35.0" prefWidth="450.0" text="" />
         </children>
      </VBox>
   </children>
</Pane>
